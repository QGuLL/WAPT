#!/bin/bash

echo "Creating wapt root diretory" 
mkdir -p /var/www/wapt/
chown www-data:www-data /var/www/wapt/
ln -s /opt/wapt/waptrepo/waptpackage.py /var/www/wapt/
ln -s /opt/wapt/waptrepo/wapt-scanpackages.py /var/www/wapt/
chmod +x /opt/wapt/waptrepo/waptpackage.py
chmod +x /opt/wapt/waptrepo/wapt-scanpackages.py
/usr/bin/python /var/www/wapt/wapt-scanpackages.py /var/www/wapt/

